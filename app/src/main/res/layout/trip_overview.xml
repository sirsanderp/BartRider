<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trip_overview_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/trip_overview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TripOverviewActivity">

        <!-- The ActionBar displayed at the top -->
        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <fragment
                android:name="com.sanderp.bartrider.TripPlannerFragment"
                android:id="@+id/trip_planner_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                tools:layout="@layout/trip_planner_fragment" />

            <ListView
                android:id="@+id/trip_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:choiceMode="singleChoice"
                tools:listitem="@layout/trip_overview_list_item" />

            <TextView
                android:id="@+id/advisory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/trip_list_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                tools:text="@string/sample_advisory" />
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add_24dp"
            android:tint="@color/material_light" />

    </RelativeLayout>

    <fragment
        android:name="com.sanderp.bartrider.TripDrawerFragment"
        android:id="@+id/trip_planner_drawer_fragment"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/trip_drawer_fragment" />

</android.support.v4.widget.DrawerLayout>