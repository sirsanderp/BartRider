<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sanderp.bartrider">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/BartTheme">
        <activity
            android:name=".TripOverviewActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TripDetailActivity"
            android:screenOrientation="portrait">
        </activity>

        <provider
            android:name=".database.StationProvider"
            android:authorities="com.sanderp.bartrider.database.StationProvider"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>